  "main": "dist/index.js",
  "scripts": {
    "test": "vitest",
    "test:ci": "vitest run",
    "test:type": "tsc --noEmit",
    "lint": "eslint",
    "db:generate": "prisma generate",
    "db:push": "dotenv -e .env.prisma -- tsx scripts/db/push.ts",
    "db:push:stage": "dotenv -e .env.staging -- prisma db push",
    "db:push:production": "dotenv -e .env.production -- prisma db push",
    "start": "node dist/index.js",
    "build": "pnpm db:generate && tsc -p . && tsc-alias",
    "dev": "cross-env NODE_ENV=development nodemon -e ts,js,.env --exec \"tsx watch src/index.ts\"",
    "gen:openapi": "pnpm db:generate && tsx scripts/openapi/index.ts",
    "gen:env": "tsx scripts/env/encode.ts",
    "seed:posts": "cross-env NODE_ENV=staging tsx scripts/mock/createPost.ts",
    "prepare": "husky"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.10.0",
  "devDependencies": {
    "@eslint/js": "^9.26.0",
