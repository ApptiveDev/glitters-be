    "@types/express": "^5.0.1",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.15.3",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/ws": "^8.18.1",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^8.0.0",
    "eslint": "^9.26.0",
    "husky": "^9.1.7",
    "nodemon": "^3.1.10",
    "prisma": "6.6.0",
    "tsc-alias": "^1.8.15",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.31.1",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.1.2",
    "vitest-mock-extended": "^3.1.0",
    "yaml": "^2.7.1",
    "zod-openapi": "^4.2.4"
  },
  "dependencies": {
    "@aws-sdk/client-ses": "^3.799.0",
    "@aws-sdk/client-sesv2": "^3.800.0",
    "@prisma/client": "6.6.0",
    "bcryptjs": "^3.0.2",
    "dotenv": "^16.5.0",
    "expo-server-sdk": "^3.15.0",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.0",
    "http-status-codes": "^2.3.0",
    "ioredis": "^5.6.1",
