                  "email": {
                    "type": "string",
                    "format": "email"
                  },
                  "password": {
                    "type": "string"
                  },
                  "name": {
                    "type": "string"
                  }
                },
                "required": [
                  "email",
                  "password",
                  "name"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "회원가입 성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "member": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "integer"
                        },
                        "email": {
                          "type": "string"
                        },
                        "name": {
                          "type": "string"
                        },
                        "joinedAt": {
                          "type": "string"
                        },
                        "reportedCount": {
                          "type": "integer"
                        }
                      },
                      "required": [
                        "id",
                        "email",
                        "name",
                        "joinedAt",
                        "reportedCount"
                      ]
                    },
                    "token": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "member",
                    "token"
                  ]
                }
              }
            }
          },
          "400": {
            "description": "이메일 미인증 또는 중복",
