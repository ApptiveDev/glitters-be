{
  "openapi": "3.1.0",
  "info": {
    "title": "Auth API",
    "version": "1.0.0",
    "description": "회원가입, 로그인, 이메일 인증 API 명세"
  },
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "servers": [
    {
      "url": "http://localhost:3000",
